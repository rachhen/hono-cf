{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "types": [
      "@cloudflare/workers-types/2023-07-01",
      // testing
      "@cloudflare/workers-types/experimental",
      "@cloudflare/vitest-pool-workers"
    ],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./test/env.d.ts",
    "./src/**/*.ts",
    "./worker-configuration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
